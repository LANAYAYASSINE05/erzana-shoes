{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  
  /* Santiago Style - Collection Grid */
  .collection-homme-grid {
    display: grid;
    gap: 3rem;
    margin-top: 4rem;
  }
  
  .collection-homme-item {
    position: relative;
    overflow: hidden;
    background: #ffffff;
    border: 1px solid rgba(35, 31, 32, 0.1);
    transition: all 0.4s ease;
    cursor: pointer;
  }
  
  .collection-homme-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.7);
    opacity: 0;
    transition: opacity 0.4s ease;
    z-index: 1;
  }
  
  .collection-homme-item:hover::before {
    opacity: 1;
  }
  
  .collection-homme-item:hover {
    transform: scale(1.04);
    border-color: #231f20;
    box-shadow: 0 8px 24px rgba(35, 31, 32, 0.12);
  }
  
  .collection-homme-item a {
    text-decoration: none;
    color: #231f20;
    display: block;
  }
  
  .collection-homme-item img {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 0.4s ease;
  }
  
  .collection-homme-item:hover img {
    transform: scale(1.05);
  }
  
  .collection-homme-item h3 {
    position: relative;
    z-index: 2;
    text-align: center;
    padding: 2rem;
    font-family: 'Playfair Display', serif;
    font-size: 1.8rem;
    color: #231f20;
    margin: 0;
    font-weight: 500;
  }
  
  @media (max-width: 480px) {
    .collection-homme-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }
  
  @media (min-width: 481px) and (max-width: 768px) {
    .collection-homme-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem;
    }
  }
  
  @media (min-width: 769px) {
    .collection-homme-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding">
    {%- unless section.settings.title == blank -%}
      <div class="title-wrapper title-wrapper--no-top-margin" style="text-align: center;">
        <h2 class="title inline-richtext {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in reveal{% endif %}">
          {{ section.settings.title }}
        </h2>
      </div>
    {%- endunless -%}

    <div class="collection-homme-grid collection-santiago-grid">
      {%- liquid
        assign collections_list = 'bottes-bottines,chaussures-de-ville,baskets-espadrilles,chaussures-confort,mocassins,sabots-babouches,chaussures-classiques,portefeuille,sandales-homme' | split: ','
      -%}
      
      {%- for collection_handle in collections_list -%}
        {%- assign collection_item = collections[collection_handle] -%}
        {%- if collection_item != blank -%}
          <div class="collection-homme-item reveal{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}" 
               {% if settings.animations_reveal_on_scroll %}style="--animation-order: {{ forloop.index }};"{% endif %}>
            <a href="{{ collection_item.url }}">
              {%- if collection_item.featured_image -%}
                <img
                  src="{{ collection_item.featured_image | image_url: width: 400 }}"
                  alt="{{ collection_item.title | escape }}"
                  loading="lazy"
                  width="400"
                  height="{{ 400 | divided_by: collection_item.featured_image.aspect_ratio | ceil }}"
                  style="max-width: 100%; height: auto;"
                >
              {%- else -%}
                <div style="width: 100%; padding-bottom: 100%; background: rgba(35, 31, 32, 0.05);"></div>
              {%- endif -%}
              <h3>{{ collection_item.title }}</h3>
            </a>
          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
</div>

